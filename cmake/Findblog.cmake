FIND_PATH(BLOG_INCLUDE_DIR blog.h ${PROJECT_SOURCE_DIR}/src/blog)
FIND_LIBRARY(BLOG_LIBRARY NAMES blog PATH ${PROJECT_SOURCE_DIR}/src/blog)
IF (BLOG_INCLUDE_DIR AND BLOG_LIBRARY)
    SET(BLOG_FOUND TRUE)
ENDIF (BLOG_INCLUDE_DIR AND BLOG_LIBRARY)
IF (BLOG_FOUND)
    IF (NOT BLOG_FIND_QUIETLY)
        MESSAGE(STATUS "Found blog: ${BLOG_LIBRARY}")
    ENDIF (NOT BLOG_FIND_QUIETLY)
ELSE (BLOG_FOUND)
    IF (BLOG_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find blog library")
    ENDIF (BLOG_FIND_REQUIRED)
ENDIF (BLOG_FOUND)